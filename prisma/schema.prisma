generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AgeCategory {
  Filhote
  Adulto
  Senior
}

enum Size {
  Pequeno
  Medio
  Grande
}

model Pet {
  id          Int      @id @default(autoincrement())
  name        String
  ageCategory String   // 'Filhote', 'Adulto', 'Senior'
  size        String   // 'Pequeno', 'MÃ©dio', 'Grande'
  description String
  photoUrl    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
